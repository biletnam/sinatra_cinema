<body>
    <script type="text/javascript">
        function changeTicketPrice(){
            var price = 0;
            var film_selected = document.getElementById('film').value;
            if(film_selected != undefined){
                if(film_selected == 'back_to_the_future'){
                    price = 7;
                }else{
                    price = 5;
                }
            }
            document.getElementById('ticket_price').innerHTML = price;
            document.getElementById('ticket_price').value = price;
        }
    </script>
    <form action="form" method="post" style="text-align: center">
        <div>
            <label>Name:</label>
            <input type="text" name="name"/>
        </div>
        <div>
            <label>e-Mail:</label>
            <input type="text" name="email"/>
        </div>
        <div>
            <select id="film" onchange="changeTicketPrice()">
                <option selected="selected">Choose a film</option>
                <option value="back_to_the_future">Back to the future</option>
                <option value="star_wars_iv">Star Wars Episode IV</option>
            </select>
        </div>
        <div>
            <label>Ticket price:</label>
            <label id="ticket_price" value="0">0</label><label> â‚¬</label>
        </div>
        <div>
            <input type="submit" name="get_ticket"/>
        </div>
    </form>
</body>
